---
// IMPORTS ASTRO ATOMS
import HeadingFour from "@/atoms/headings/four/uppercase/white/index.astro"

// IMPORTS ASTRO COMPONENTS
import Li from "./li/index.astro"

// IMPORTS ASTRO ATOMS
import Star from "@/atoms/star/index.astro"
---
<section class="flex flex-col gap-2 justify-between">
    <div class="space-y-2">
        <HeadingFour>ABOUT US</HeadingFour>
        <ul class="pl-3 space-y-2">
            <Li href="/services" aria_label="">Services</Li>
            <Li href="/clients" aria_label="">CLIENTS</Li>
            <Li href="/portfolio-of-expandx" aria_label="">PORTFOLIO</Li>
            <Li href="/expandx-marketing-web" aria_label="">PROJECTS</Li>
            <Li href="/expandx-marketing-web" aria_label="">REFERENCES</Li>
            <Li href="/clutch-reviews-expandx" aria_label="">REVIEWS</Li>
            <Li href="/team" aria_label="">TEAM</Li>
            <Li href="/marketing-blog-and-marketing-strategies" aria_label="">BLOG</Li>
            <Li href="/yourgift" aria_label="">GIFT</Li>
        </ul>
    </div>
    <div class="grid grid-cols-2 gap-6 h-fit">
        <div class="space-y-1">
            <p class="text-white uppercase text-xs font-roboto tracking-wider">Reviewed on</p>
            <div>
                <a href="https://clutch.co/profile/expandx?utm_source=widget&utm_medium=2&utm_campaign=widget&utm_content=logo&utm_term=expandx.com" target="_blank">
                    <div class="w-24 h-6">
                        <img
                            src="/icons/clutch-white.svg"
                            alt=""
                            class="w-24 h-6"
                        />
                    </div>
                </a>
            </div>
        </div>
        <div class="flex flex-col justify-between">
            <a href="https://clutch.co/profile/expandx?utm_source=widget&utm_medium=2&utm_campaign=widget&utm_content=stars&utm_term=expandx.com#reviews" target="_blank">
                <div class="flex items-center gap-1">
                    <Star />
                    <Star />
                    <Star />
                    <Star />
                    <Star />
                </div>
            </a>
            <div>
                <a href="https://clutch.co/profile/expandx?utm_source=widget&utm_medium=2&utm_campaign=widget&utm_content=num_reviews&utm_term=expandx.com#reviews" target="_blank">
                    <p class="text-white uppercase text-sm font-roboto tracking-wider">45 reviews</p>
                </a>
            </div>
        </div>
    </div>
</section>
